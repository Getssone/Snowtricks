{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	<link href="{{ asset('css/form/form.css') }}" rel=" stylesheet"/>
{% endblock %}

{% block titleHeader %}
	<h1 class="display-5 fw-bolder text-white mb-2">Réinitialisations</h1>
{% endblock %}
{% block subtitleHeader %}
	<p class="lead fw-normal text-white-50 mb-4">Pour mieux si retrouver !</p>
{% endblock %}
{% block body %}
	<section>
		<h1>Réinitialiser votre mot de passe</h1>
		{{ form_start(resetForm) }}
		<p>
			{{ form_row(resetForm.plainPassword) }}
		</p>
		<button class="btn btn-primary">Enregistrement</button>
		{{ form_end(resetForm) }}
	</section>
{% endblock %}
