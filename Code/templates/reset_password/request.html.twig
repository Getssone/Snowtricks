{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	<link href="{{ asset('css/form/form.css') }}" rel=" stylesheet"/>
{% endblock %}
{% block titleHeader %}
	<h1 class="display-5 fw-bolder text-white mb-2">Réinitialisations</h1>
{% endblock %}
{% block subtitleHeader %}
	<p class="lead fw-normal text-white-50 mb-4">Pour mieux si retrouver !</p>
{% endblock %}
{% block body %}
	<section>
		<h1>Réinitialiser votre mot de passe</h1>
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<p>
			{{ form_start(requestForm) }}
		</p>
		<p>
			{{ form_row(requestForm.username, {label:"Profil"})}}
		</p>
		<div>
			<small>
				Saisissez votre nom de profil et nous vous enverrons un lien sur l'adresse mail auquel vous vous étiez enregistré pour réinitialiser votre mot de passe.
			</small>
		</div>

		<button class="btn btn-primary">Réinitialiser le mot de passe</button>
		{{ form_end(requestForm) }}
	</section>
{% endblock %}
