{% extends 'base.html.twig' %}

{% block title %}Video
{% endblock %}

{% block body %}
	<h1>Video</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ video.id }}</td>
			</tr>
			<tr>
				<th>Link</th>
				<td>{{ video.link }}</td>
			</tr>
			<tr>
				<th>UpdateAt</th>
				<td>{{ video.updateAt ? video.updateAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div class="container_button_editArticle">

		<button class="classText btn btn-info" type="button">
			<a href="{{ path('app_home') }}">
				<i class="fas fa-angle-double-left"></i>
			</a>
		</button>
		<button class="classIcon btn btn-info" type="button">
			<a href="{{ path('app_home') }}">
				<i class="fas fa-angle-double-left"></i>
			</a>
		</button>

		<button class=" classText btn btn-warning">
			<a href="{{ path('app_video_edit', {'id': video.id}) }}">
				<i class="far fa-edit"></i>
			</a>

		</button>
		<button class=" classIcon btn btn-warning">
			<a href="{{ path('app_video_edit', {'id': video.id}) }}">
				<i class="far fa-edit"></i>
			</a>

		</button>
	</div>

	{{ include('video/_delete_form.html.twig') }}
{% endblock %}
