<form method="post" action="{{ path('app_article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">

	<button class=" classIcon btn btn-danger">
		<i class="far fa-trash-alt"></i>
	</button>
	<button class="classText btn btn-danger">
		<i class="far fa-trash-alt"></i>
	</button>
</form>
