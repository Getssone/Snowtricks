{% extends 'base.html.twig' %}

{% block title %}Image
{% endblock %}

{% block body %}
	<h1>Image</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ image.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ image.name }}</td>
			</tr>
			<tr>
				<th>File</th>
				<td>{{ image.file }}</td>
			</tr>
			<tr>
				<th>UpdateAt</th>
				<td>{{ image.updateAt ? image.updateAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div class="container_button_editArticle">


		<button class="classText btn btn-info" type="button">
			<a href="{{ path('app_home') }}">
				<i class="fas fa-angle-double-left"></i>
			</a>
		</button>
		<button class="classIcon btn btn-info" type="button">
			<a href="{{ path('app_home') }}">
				<i class="fas fa-angle-double-left"></i>
			</a>
		</button>

		<button class=" classText btn btn-warning">
			<a href="{{ path('app_image_edit', {'id': image.id}) }}">
				<i class="far fa-edit"></i>
			</a>

		</button>
		<button class=" classIcon btn btn-warning">
			<a href="{{ path('app_image_edit', {'id': image.id}) }}">
				<i class="far fa-edit"></i>
			</a>

		</button>
	</div>
	{{ include('image/_delete_form.html.twig') }}
{% endblock %}
